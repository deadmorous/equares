#pick-image(title='Pick an image' style='display: none;')
    if req.isAuthenticated()
        .accordion
            h3 Select an image
            #image-thumbnails
            h3 Or upload your own image
            div
                input#image-uploader(type='file' accept='image/*')
                br
                table
                    tr
                        td
                            label(for='title') Title
                        td
                            input#image-upload-title(type='text' name='title')
                    tr
                        td
                            label(for='keywords') Keywords
                        td
                            input#image-upload-keywords(type='text' name='keywords')
                br
                input#image-upload(type='button' value='Upload' disabled)
    else
        p Select an image
        #image-thumbnails
