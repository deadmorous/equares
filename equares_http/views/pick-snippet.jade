#pick-snippet(title='Pick a snippet' style='display: none;')
    style.
        #pick-snippet-content {
            position: absolute;
            left: 1em;
            top: 0.5em;
            right: 1em;
            bottom: 0.5em;
        }
        #pick-snippet {
            overflow: hidden;
        }
        #snippet-filter {
            position: absolute;
            top: 0px;
            left: 0px;
            right: 115px;
        }
        #snippet-filter > * {
            font-size: smaller;
        }
        #snippet-filter input[type='text'] {
            border: 1px solid #ccc;
        }
        #snippet-filter input[type='text'],
        #snippet-filter input[type='submit'] {
            margin-left: 5px;
            margin-right: 15px;
        }
        #snippet-filter input[type='checkbox'] {
            margin-left: 5px;
            margin-right: 5px;
        }
        #snippet-filter input[type='checkbox'] + * {
            margin-right: 15px;
        }
        #snippet-filter a {
            font-size: small;
        }
        #snippet-advanced-search {
            display: inline;
        }
        #snippet-filter-icon {
            margin-right: 10px;
            position: relative;
            top: 5px;
        }
        #snippets {
            position: absolute;
            top: 3.5em;
            bottom: 0px;
            width: 100%;
        }
        #snippets > div {
            width: 50%;
            height: 100%;
            padding: 0px;
            margin: 0px;
            position: absolute;
            top: 0px;
        }
        #snippet-list {
            overflow: auto;
            left: 0px;
        }
        #current-snippet {
            overflow: hidden;
            right: 0px;
        }

        #current-snippet-doc {
            overflow: auto;
            position: absolute;
            left: 30px;
            right: 0px;
        }
        #current-snippet-doc h1 {
            margin-top: 0px;
            margin-bottom: 5px;
        }

        #current-snippet-tools {
            position: absolute;
            width: 23px;
            height: 69px;
            top: 0.5em;
            left: 0px;
            display: none;
        }
        #current-snippet-tools > input[type=button] {
            height: 20px;
            border-left: 1px solid #bbb;
            border-top: 1px solid #bbb;
            border-bottom: 1px solid #bbb;
            border-right-style: none;
            border-top-left-radius: 5px;
            border-bottom-left-radius: 5px;
            background-color: #eee;
            cursor: point;
        }

        #edit-snippet {
            overflow: hidden;
            left: 0px;
        }
        #edit-snippet-code-container {
            overflow: visible;
            position: absolute;
            left: 0px;
            right: 25px;
            height: 100%;
        }
        #edit-snippet-code {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: auto;
            padding-top: 0px;
            resize: none;
            outline: none;
        }
        #edit-snippet-code.modified {
            background-color: #ffe;
        }
        #edit-snippet textarea {
            font-family: monospace;
        }

        #edit-snippet-tools {
            position: absolute;
            width: 23px;
            height: 46px;
            top: 0.5em;
            right: 0px;
        }
        #edit-snippet-tools > input[type=button] {
            height: 20px;
            border-right: 1px solid #bbb;
            border-top: 1px solid #bbb;
            border-bottom: 1px solid #bbb;
            border-left-style: none;
            border-top-right-radius: 5px;
            border-bottom-right-radius: 5px;
            background-color: #eee;
            cursor: point;
        }

        #snippet-tools {
            position: absolute;
            width: 23px;
            height: 20px;
            top: 3px;
            right: 0px;
        }
        #snippet-tools > input[type=button] {
            height: 20px;
            border: 1px solid #bbb;
            border-radius: 3px;
            background-color: #eee;
            cursor: pointer;
        }

        .snippet-container {
            line-height: 90%
            padding: 0px 0.5em;
        }

        .snippet-container a {
            text-decoration: none;
            color: #2a6;
        }
        .snippet-container a:link {
        }
        .snippet-container a:visited {
            color: #172;
        }
        .snippet-container a:hover {
            text-decoration: underline;
        }
        .snippet-container a.current-snippet {
            text-decoration: underline;
        }

